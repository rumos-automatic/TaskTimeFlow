{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/lib/*": ["./lib/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/store/*": ["./store/*"],
      "@/app/*": ["./app/*"],
      "@/public/*": ["./public/*"],
      "@tasktimeflow/types": ["../../packages/types"],
      "@tasktimeflow/types/*": ["../../packages/types/*"],
      "@tasktimeflow/ui": ["../../packages/ui"],
      "@tasktimeflow/ui/*": ["../../packages/ui/*"],
      "@tasktimeflow/utils": ["../../packages/utils"],
      "@tasktimeflow/utils/*": ["../../packages/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts", 
    "**/*.ts", 
    "**/*.tsx", 
    ".next/types/**/*.ts",
    "../../packages/types/**/*.ts",
    "../../packages/ui/**/*.tsx",
    "../../packages/utils/**/*.ts"
  ],
  "references": [
    { "path": "../../packages/types" },
    { "path": "../../packages/ui" },
    { "path": "../../packages/utils" }
  ]
}